---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    date?: Date;
    category?: string;
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
const { title, description, date, category, tags } = frontmatter;
---

<BaseLayout title={`${title} | Knowledge Base`} description={description}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <a href="/agentic-knowledge-base/" class="text-xl font-bold text-gray-900 dark:text-white">
            Knowledge Base
          </a>
          <div class="flex gap-4">
            <a
              href="/agentic-knowledge-base/docs"
              class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white"
            >
              Documentation
            </a>
            <a
              href="https://github.com/wlfmnstr/agentic-knowledge-base"
              class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white"
              target="_blank"
              rel="noopener noreferrer"
            >
              GitHub
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <article class="prose prose-lg dark:prose-invert max-w-none">
        <header class="mb-8">
          {category && (
            <div class="text-sm font-medium text-blue-600 dark:text-blue-400 mb-2">
              {category}
            </div>
          )}
          <h1 class="text-4xl font-bold mb-4">{title}</h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">{description}</p>
          {date && (
            <time class="text-sm text-gray-500 dark:text-gray-500 mt-2 block">
              {new Date(date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
          )}
          {tags && tags.length > 0 && (
            <div class="flex gap-2 mt-4">
              {tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <div class="mt-8">
          <slot />
        </div>
      </article>
    </main>

    <footer class="border-t border-gray-200 dark:border-gray-700 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <p class="text-center text-gray-500 dark:text-gray-400 text-sm">
          Built with Astro and TypeScript
        </p>
      </div>
    </footer>
  </div>
</BaseLayout>
